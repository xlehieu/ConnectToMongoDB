@model ConnectToMongoDB.Models.MonHoc
@{
    ViewData["Title"] = "Thông tin chi tiết môn học";
}
<h1>Chi tiết thông tin môn học</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã môn học
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaMH)
        </dd>
        <dt class = "col-sm-2">
            Tên môn học
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenMH)
        </dd>
        <dt class="col-sm-2">
            Số tín chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoTinChi)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "Edit", new { id = Model._id }) |
    <a style="width:150px" class="btn btn-outline-danger" asp-action="Index">Quay lại</a>
</div>
