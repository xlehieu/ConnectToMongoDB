@model ConnectToMongoDB.Models.GiangVien
@{
    ViewData["Title"] = "Xóa thông tin giảng viên"; 
}
<h3>Bạn có muốn xóa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã giảng viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaGV)
        </dd>
        <dt class="col-sm-2">
            Tên giảng viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenGV)
        </dd>
        <dt class="col-sm-2">
            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a class="btn btn-outline-danger" style="width:150px" asp-action="Index">Quay lại</a>
    </form>
</div>
