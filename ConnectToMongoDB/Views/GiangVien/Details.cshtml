@model ConnectToMongoDB.Models.GiangVien
@{
    ViewData["Title"] = "Thông tin chi tiết giảng viên";
}
<h1>Chi tiết thông tin giảng viên</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã giảng viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaGV)
        </dd>
        <dt class = "col-sm-2">
            Tên giảng viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenGV)
        </dd>
        <dt class="col-sm-2">
            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "Edit", new { id = Model._id }) |
    <a class="btn btn-outline-danger" style="width:150px" asp-action="Index">Quay lại</a>
</div>
