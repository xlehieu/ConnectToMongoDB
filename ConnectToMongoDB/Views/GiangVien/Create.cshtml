@model ConnectToMongoDB.Models.GiangVien

@{
    ViewData["Title"] = "Thêm giảng viên";
}

<h1>Thêm thông tin giảng viên</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaGV" class="control-label">Mã giảng viên</label>
                <input asp-for="MaGV" class="form-control" />
                <span asp-validation-for="MaGV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenGV" class="control-label">Tên giảng viên</label>
                <input asp-for="TenGV" class="form-control" />
                <span asp-validation-for="TenGV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="control-label">Ngày sinh</label>
                <input type="date" asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoDienThoai" class="control-label">Số điện thoại</label>
                <input asp-for="SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" style="width:150px" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-outline-danger align-content-center" style="width:150px" asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
